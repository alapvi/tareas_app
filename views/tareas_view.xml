    <!-- Top menu item -->
    <menuitem name="tareas_app" id="tareas_app.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Tareas" id="tareas_app.menu_tareas" parent="tareas_app.menu_root"/>

