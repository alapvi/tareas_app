<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="tareas_app.listado_categorias_tree">
      <field name="name">Listado de Categorias</field>
      <field name="model">tareas_app.categorias_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="tareas_app.listado_categorias_form">
      <field name="name">Formulario de Categorias</field>
      <field name="model">tareas_app.categorias_model</field>
      <field name="arch" type="xml">
        <form string="Formulario de categorias">
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
          
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="tareas_app.action_window_categorias">
      <field name="name">Listado de Categor√≠as </field>
      <field name="res_model">tareas_app.categorias_model</field>
      <field name="view_mode">tree,form</field>
    </record>

